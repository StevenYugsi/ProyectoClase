@model ProyectoClase.Models.Entidades.Autor
@{
    ViewData["title"] = "EditarAutores";
    Layout = null;
}
<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Editar Autor</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdAutor" />
                <div class="form-group">
                    <label></label>
                    <input asp-for="Nombre" class="form-control" placeholder=" Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Apellido" class="form-control" placeholder=" Apellido" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

